server {
    listen 80;
    server_name mardu.space www.mardu.space;

    # Redirect non-www to www (optional, or vice versa)
    # if ($host = mardu.space) {
    #     return 301 https://www.mardu.space$request_uri;
    # }

    location / {
        # Proxy to Next.js app running on localhost:3000
        proxy_pass http://localhost:3000;
        
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_cache_bypass $http_upgrade;

        # Forward real IP to Next.js (important for Rate Limiting etc.)
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    # Optional: Serve static files directly via Nginx for performance
    # location /_next/static {
    #     alias /var/www/mardu.space/.next/static;
    #     expires 365d;
    #     access_log off;
    # }
}
